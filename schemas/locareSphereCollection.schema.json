{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["LocareJSON"]
    },
    "version": {
      "type": "string",
      "pattern": "^0\\.1$"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "commonCoordinateSpaceVersion": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["commonCoordinateSpaceVersion"]
    },
    "LocareCollection": {
      "type": "object",
      "properties": {
        "objects": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["LocareObject"]
              },
              "geometry": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["Sphere"]
                  },
                  "coordinates": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "minItems": 3,
                    "maxItems": 3
                  },
                  "radius": {
                    "type": "string",
                    "pattern": "^\\d+(\\.\\d+)?\\s?Âµm$"
                  }
                },
                "required": ["type", "coordinates", "radius"]
              },
              "properties": {
                "type": "object",
                "properties": {
                  "linkedDataset": {
                    "type": "string",
                    "format": "uri"
                  },
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "required": ["linkedDataset", "name", "description"]
              }
            },
            "required": ["type", "geometry", "properties"]
          }
        }
      },
      "required": ["objects"]
    }
  },
  "required": ["type", "version", "metadata", "LocareCollection"]
}
