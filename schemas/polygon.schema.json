{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["LocareJSON"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d\\.\\d(?:\\.\\d+)*$"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "commonCoordinateSpaceVersion": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["commonCoordinateSpaceVersion"]
    },
    "LocareObject": {
      "type": "object",
      "properties": {
        "geometry": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["Polygon"]
            },
            "coordinates": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 3,
                  "maxItems": 3
                },
              }
            }
          },
          "required": ["type", "coordinates"]
        }
      },
      "required": ["geometry"]
    },
    "properties": {
      "type": "object",
      "properties": {
        "linkedDataset": {
          "type": "string",
          "format": "uri"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["linkedDataset", "name", "description"]
    }
  },
  "required": ["type", "version", "metadata", "LocareObject", "properties"]
}
